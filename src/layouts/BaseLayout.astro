---
import '../styles/global.css';
import Masthead from '../components/Masthead.astro';

const {
  title = 'Hemlock Bay',
  motto = 'Museum & Archive',
  subtitle = 'An institutional setting for collected works.',
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <a class="skip-link" href="#main-content">Skip to content</a>
    <div class="hb-frame">
      <Masthead title={title} motto={motto} subtitle={subtitle} />
      <main id="main-content" class="hb-main">
        <slot />
      </main>
    </div>
  </body>
</html>
